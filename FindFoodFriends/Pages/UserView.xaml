<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindFoodFriends.Pages.UserView">

    <Frame BackgroundColor="Pink" HeightRequest="150" CornerRadius="10">
        <ScrollView>
            <VerticalStackLayout>
                <Label x:Name="UsernameLabel" FontSize="35" TextColor="Black"/>
                <Label x:Name="ScoreLabel" FontSize="20" TextColor="Black" />
                <Label x:Name="DetailsLabel" FontSize="15" TextColor="Black" />
            </VerticalStackLayout>
        </ScrollView>
    </Frame>

</ContentView>
