<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindFoodFriends.Pages.ContactCard">

    <Frame BackgroundColor="#65a27d" HeightRequest="165">
        <ScrollView>
            <VerticalStackLayout>
                <HorizontalStackLayout Spacing="90">
                    <Label x:Name="UsernameLabel" FontSize="25" FontAttributes="Bold" TextColor="#444444" VerticalTextAlignment="Center"/>
                    <Button x:Name="Chat_Btn" 
                            Text="Chat" 
                            TextColor="Black" 
                            FontAttributes="Bold"
                            HeightRequest="47" 
                            FontSize="25" 
                            Clicked="Chat_Btn_Clicked" 
                            BackgroundColor="#467158"/>
                </HorizontalStackLayout>

                <Label x:Name="ScoreLabel" FontSize="20" FontAttributes="Bold" TextColor="#467158"/>
                <Label x:Name="DetailsLabel" FontSize="20" TextColor="#467158"/>
            </VerticalStackLayout>
        </ScrollView>
    </Frame>

</ContentView>
