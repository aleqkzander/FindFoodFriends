<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindFoodFriends.Pages.ChatPage"
             Title="ChatPage">

    <VerticalStackLayout Padding="25" Spacing="25">

        <Label 
            x:Name="Chatuser"
            FontSize="35"
            TextColor="#467158" 
            HorizontalTextAlignment="Center"/>

        <ScrollView x:Name="ScrollView" HeightRequest="515">
            <VerticalStackLayout x:Name="MessageContainer" Spacing="10">
                <!-- Add messages here -->
            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout>
            <Editor
                x:Name="MessageEntry"
                Placeholder="Enter your message"
                HeightRequest="100"/>
            <Button 
                x:Name="SendBtn"
                Text="Abschicken"
                BackgroundColor="#65a27d"
                TextColor="#444444"
                Clicked="SendBtn_Clicked"/>
        </VerticalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>