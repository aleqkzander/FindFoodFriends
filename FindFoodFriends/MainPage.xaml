<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindFoodFriends.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title=""
             BackgroundColor="White">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="White" StatusBarStyle="DarkContent"/>
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25" VerticalOptions="Center">

            <Image Source="logo.png" 
               HeightRequest="400" />

            <Label x:Name="LoadingLabel"
            Text="Es werden Vorbereitungen getroffen"
            FontAttributes="Bold"
            FontSize="20" 
            HorizontalOptions="Center"
            TextColor="DarkSlateGrey"/>

            <Image x:Name="loading" 
               Source="loading.gif" 
               HeightRequest="50"
               IsAnimationPlaying="False" 
               IsVisible="true"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
